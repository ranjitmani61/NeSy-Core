# ──────────────────────────────────────────────────────────────────
# NeSy-Core — Environment Variables Template
# Copy to .env and fill in values before running.
# ──────────────────────────────────────────────────────────────────

# Domain preset: general | medical | legal
NESY_DOMAIN=general

# Server configuration
NESY_SERVER_HOST=0.0.0.0
NESY_SERVER_PORT=8000
NESY_SERVER_RELOAD=false

# Logging
NESY_LOG_LEVEL=INFO

# Meta-cognition thresholds (override config YAML)
# NESY_DOUBT_THRESHOLD=0.60
# NESY_STRICT_MODE=false

# Edge deployment
# NESY_NPU_ENABLED=false
# NESY_LITE_MODE=false
# NESY_QUANTIZATION_BITS=8

# Continual learning
# NESY_LAMBDA_EWC=1000.0
# NESY_REPLAY_BUFFER_SIZE=500

# External integrations (provide your own keys)
# OPENAI_API_KEY=
# HUGGINGFACE_TOKEN=
